{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["node_modules/types", "./typings"],
    "types": ["node", "regedit"]
  },
  "include": ["src/**/*"]
}
